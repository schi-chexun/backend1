<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easyactivity.mapper.NotificationMapper">

    <!-- 结果映射 -->
    <resultMap id="NotificationResultMap" type="com.easyactivity.entity.Notification">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="type" column="type"/>
        <result property="relatedId" column="related_id"/>
        <result property="isRead" column="is_read"/>
        <result property="createTime" column="create_time"/>
        <result property="readTime" column="read_time"/>
    </resultMap>

    <!-- 插入通知 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO notification (user_id, title, content, type, related_id, is_read, create_time)
        VALUES (#{userId}, #{title}, #{content}, #{type}, #{relatedId}, #{isRead}, #{createTime})
    </insert>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="NotificationResultMap">
        SELECT * FROM notification WHERE id = #{id}
    </select>

    <!-- 根据用户ID查询所有通知 -->
    <select id="selectByUserId" resultMap="NotificationResultMap">
        SELECT * FROM notification
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

    <!-- 根据用户ID查询未读通知 -->
    <select id="selectUnreadByUserId" resultMap="NotificationResultMap">
        SELECT * FROM notification
        WHERE user_id = #{userId} AND is_read = 0
        ORDER BY create_time DESC
    </select>

    <!-- 统计用户未读通知数量 -->
    <select id="countUnreadByUserId" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM notification
        WHERE user_id = #{userId} AND is_read = 0
    </select>

    <!-- 更新通知 -->
    <update id="update">
        UPDATE notification
        SET is_read = #{isRead}, read_time = #{readTime}
        WHERE id = #{id}
    </update>

    <!-- 标记单个通知为已读 -->
    <update id="markAsRead">
        UPDATE notification
        SET is_read = 1, read_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 标记用户所有通知为已读 -->
    <update id="markAllAsReadByUserId">
        UPDATE notification
        SET is_read = 1, read_time = NOW()
        WHERE user_id = #{userId} AND is_read = 0
    </update>

    <!-- 删除通知 -->
    <delete id="deleteById">
        DELETE FROM notification WHERE id = #{id}
    </delete>

    <!-- 根据类型查询通知 -->
    <select id="selectByUserIdAndType" resultMap="NotificationResultMap">
        SELECT * FROM notification
        WHERE user_id = #{userId} AND type = #{type}
        ORDER BY create_time DESC
    </select>

    <!-- 批量删除用户所有通知 -->
    <delete id="deleteByUserId">
        DELETE FROM notification WHERE user_id = #{userId}
    </delete>

</mapper>